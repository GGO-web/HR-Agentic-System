{
  "name": "hr-agentic-system",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api",
    "dev:convex": "turbo convex --filter=web",
    "dev:all": "turbo dev convex",
